        "LICENSE": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "cargo.lock": true,
        "**/.modelator": true,
        "mc.log": true,
        "log*.smt": true,
        "MC.out": true,
        "profile-rules.txt": true,
